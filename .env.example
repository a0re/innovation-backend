# Backend Configuration
# Copy this file to .env and update with your values

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=false
LOG_LEVEL=warning

# For development (auto-restart on code changes):
# RELOAD=true
# LOG_LEVEL=info

# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:5174,http://localhost:5173

# Database Configuration
DATABASE_URL=sqlite:///./spam_detection.db

# API Configuration
MAX_BATCH_SIZE=100
API_TITLE=Spam Detection API
API_VERSION=1.0.0

# Security Configuration
# Optional: Set API_KEY to require authentication for all prediction endpoints
# Leave empty or unset to disable API key authentication
API_KEY=

# Rate Limiting Configuration
# Maximum number of requests per window from a single IP address
RATE_LIMIT_REQUESTS=100
# Time window in seconds for rate limiting
RATE_LIMIT_WINDOW=60

# For production, consider stricter rate limits:
# RATE_LIMIT_REQUESTS=30
# RATE_LIMIT_WINDOW=60

# Database Seeding Configuration
# Auto-seed database with fake data if empty (useful for development/testing)
AUTO_SEED=true
# Number of fake predictions to generate when seeding
SEED_COUNT=500

# For production, disable auto-seeding:
# AUTO_SEED=false
